{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "standard"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2019,
        "parser": "babel-eslint"
    },
    "rules": {
        "eqeqeq": "error",
        "prefer-const": "error",
        "quotes": [
            "error",
            "double"
        ],
        "semi": "off",
        "no-var": "error"
    }
}